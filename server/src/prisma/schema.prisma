generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum MediaType {
  MOVIE
  TV
}


model User {
  id String @id @default(uuid())
  email String @unique
  password String // hashed
  username String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  bookmarks Bookmark[]

  @@index([email]) // creates a b-tree index on email field
}

model Bookmark {
  id String @id @default(uuid())
  userId String
  externalId String //the id of the content item from OMDb API
  mediaType MediaType
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id]) // defines relationship to User table

  @@index([userId])
  @@unique([userId, externalId]) // ensures unique combination of fields in Bookmark table, so no pair can be the same
}